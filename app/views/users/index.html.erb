<h2>List of Users</h2>
<div class='row'>
  <% @user.each do |user| %>
    <div class="col-12 col-md-6 col-lg-4 col-xl-3 my-2">
      <% if current_user != user %>
        <%= user.username %>
        <br>
        <%= user.fullname %>
        <br>
        <%= link_to 'Profile', user, class:'link_style' %>
      <% else %>
      <% end %>
    </div>
  <% end %>
</div>
