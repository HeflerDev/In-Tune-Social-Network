<section class="container">

  <div class="circular-landscape-big mx-auto my-5">
    <% if @user.avatar.attached? %>
      <img class='' src='<%=(url_for(@user.avatar))%>'>
      <% else %>
        <img src="https://cdn.business2community.com/wp-content/uploads/2017/08/blank-profile-picture-973460_640.png" alt="profile pic" class=''>
    <% end %>
  </div>

    <div class='text-center'>
      <span><%= @user.username %></span>
      <br>
      <span>Aka :
        <%= @user.fullname %></span>
      <br>
      <span style='color: gray'>Bio</span>
      <br>
      <span style='color: gray'>info</span>
    </div>
  </section>
  <section class='container-fluid my-4 text-center'>
    <div class="row">
      <span class='col-4'>Posts</span>
      <span class='col-4'>Activity</span>
      <span class='col-4'>Liked Things</span>
    </div>
  </section>
  <% @user.opinions.each do |opinion| %>
  <section class='m-4 container'>
    <div class="container">
      <div class="row d-flex justify-content-start ">
        <div class="circular-landscape">
          <% if opinion.author.avatar.attached? %>
            <img class='' src='<%=(url_for(opinion.author.avatar))%>'>
            <% else %>
              <img src="https://cdn.business2community.com/wp-content/uploads/2017/08/blank-profile-picture-973460_640.png" alt="profile pic" class=''>
          <% end %>
        </div>
        <div class='opinion-box ml-3 p-2'>
          <%= opinion.text %>
        </div>
      </div>
    </div>
  </section>
  <% end %>
