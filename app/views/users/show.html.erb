<section class="container partial-background p-5">

  <div class="circular-landscape-big mx-auto my-5">
    <% if @user.avatar.attached? %>
      <img class='' src='<%=(url_for(@user.avatar))%>'>
      <% else %>
        <img src="https://cdn.business2community.com/wp-content/uploads/2017/08/blank-profile-picture-973460_640.png" alt="profile pic" class=''>
    <% end %>
  </div>

    <div class='text-center'>
      <span><%= @user.fullname %></span>
      <br>
      <span>Aka :
        <%= @user.username %></span>
      <br>
      <p class='m-2 p-2'>
        <% if @user.biography %>
          "<%= @user.biography %>"
        <% else %>
          No Biography
        <% end %>
      </p>
      <br>
      <% if @user == current_user %>
        <%= link_to 'Edit Profile', edit_user_path, class:'accent-button p-1' %>
      <% end %>
    </div>
  </section>
  <section class='container-fluid partial-background my-4 text-center'>
    <div class="row">
      <!-- Number of User opinions -->
      <% if @user.opinions.any? %>
        <span class='col-4'><%= @user.opinions.count %> <%= 'opinion'.pluralize(@user.opinions.count) %> shared. </span>
      <% else %>
        <span class='col-4'> This user didn't share any opinion. </span>
      <% end %>
      <!-- Number of Followers -->
      <% if @user.followers.any? %>
        <span class='col-4'>This User has <%= @user.followers.count %> <%= 'follower'.pluralize(@user.followers.count) %></span>
      <% else %>
        <span class='col-4'>This User is not being followed by anyone</span>
      <% end %>
      <!-- Number of Followees -->
      <% if @user.followees.any? %>
        <span class='col-4'>This User has <%= @user.followees.count %> <%= 'followee'.pluralize(@user.followees.count) %></span>
      <% else %>
        <span class='col-4'>This User is not following anyone</span>
      <% end %>
    </div>
  </section>
  <% @user.opinions.each do |opinion| %>
  <section class='my-4 py-4 w-75 container partial-background  border rounded'>
    <div class="container">
      <div class="opinion-title p-3 my-3 rounded">
        <%= opinion.title %>
      </div>
      <div class="row d-flex justify-content-start ">
        <div class="circular-landscape">
          <% if opinion.author.avatar.attached? %>
            <img class='' src='<%=(url_for(opinion.author.avatar))%>'>
            <% else %>
              <img src="https://cdn.business2community.com/wp-content/uploads/2017/08/blank-profile-picture-973460_640.png" alt="profile pic" class=''>
          <% end %>
        </div>
        <div class='opinion-box ml-3 p-2'>
          <%= opinion.text %>
        </div>
      </div>
    </div>
  </section>
  <% end %>
